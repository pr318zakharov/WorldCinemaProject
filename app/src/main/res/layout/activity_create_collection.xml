<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCollection"
    android:orientation="vertical"
    android:background="#150D0B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/nz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/str2"
                android:onClick="onClick">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Создать коллекцию"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="342dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:text="Название"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:background="@drawable/text"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_group_1__2_"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/is"
                android:onClick="iss"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Выбрать иконку"
                android:textSize="15dp"
                android:textColor="#EF3A01"
                android:textAllCaps="false"
                android:background="@drawable/text">
            </Button>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp">

        <Button
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:backgroundTint="#EF3A01"
            android:textAllCaps="false"
            android:text="Сохранить"
            android:textSize="17dp">
        </Button>

    </LinearLayout>

</LinearLayout>